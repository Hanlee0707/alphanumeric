<% provide(:title, "Assigned Articles") %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid center">
      <h3>Assigned Articles</h3>
    </div>
    <div class="row-fluid"><div class="span12"></div></div>
    <div class="row-fluid">
      <div class="span1"></div>
      <div class="span10">
	<% if !@articles.empty? %>
	<table class="table table-striped table-hover">
	  <thead>
	    <tr>
	      <th class="span5">ISSUE</th>
	      <% if @isEditor then %> 
	      <th class="span3">CONTRIBUTOR</th>
	      <% end %>
	      <% if @isContributor then %> 
	      <th class="span3">EDITOR</th>
	      <% end %>
	      <th class="span2">CREATED</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @articles.each do |article| %>
	    <tr>
	      <% if @isEditor then %>
	      <td><%= link_to article.temporary_title, workspace_article_path(article) %></td>
	      <% end %>
	      <% if @isContributor then %>
	      <td><%= link_to article.temporary_title, workspace_article_path(article) %></td>
	      <% end %>
	      <% if @isEditor then %>
	      <td><%= article.contributor.first_name + " " + article.contributor.last_name %></td>
	      <% end %>
	      <% if @isContributor then %>
	      <td><%= article.editor.first_name + " " + article.editor.last_name %></td>
	      <% end %>
	      <td><%= article.created_at.localtime.strftime "%m/%d/%y" %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
	<div class="row-fluid">
	  <%= will_paginate @articles, :renderer => BootstrapPagination::Rails, :previous_label => "←", :next_label => "→" %>
	</div>
      </div>
      <div class="span1"></div>
    </div>
    <% else %>
    <div class="row-fluid center">
      <strong>There are no articles.</strong>
    </div>
    <% end %>
  </div>  
</div>
  




