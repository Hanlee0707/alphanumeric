<% provide(:title, "Home")%>

<% if current_employee then %>
<div class="row-fluid">
  <div class="row-fluid center">
    <h3>List of Working Issues</h3>
  </div>
</div>
<div class="row-fluid"><div class="span12"></div></div>
<div class="row-fluid center">
  <% if !@articles.empty? %>
  <div class="span1"></div>
  <div class="span10">
    <table class="table table-striped table-hover">
      <thead>
	<tr>
	  <th class="span5">ISSUE</th>
	  <th class="span3">EDITOR</th>
	  <th class="span2">CREATED</th>
	  <th class="span2">STATUS</th>
	</tr>
      </thead>
      <tbody>
	<% @articles.each do |article| %>
	<tr>
	  <td><%= article.temporary_title%></td>
	  <% if article.editor.nil? then %>
	  <td>NO EDITOR </td>
	  <% else %>
	  <td><%= article.editor.first_name + " " + article.editor.last_name %></td>
	  <% end %>
	  <td><%= article.created_at.localtime.strftime "%m/%d/%y" %></td>
	  <td><%= article.status %></td>
	</tr>
	<% end %>
      </tbody>
    </table>
    <div class="span12 row center"><%= will_paginate @articles, :renderer => BootstrapPagination::Rails, :previous_label => "←", :next_label => "→" %></div>
  </div>
  <div class="span1"></div>
  <% else %>
  <div class="span12 row center">
    <strong>There are no articles in progress right now.</strong>
  </div>
  <% end %>
</div>  
<% elsif current_user %>
<div class="row-fluid">
  <div class="row-fluid center">
    <h3>User Home</h3>
  </div>
</div>  
<% end %>
  


