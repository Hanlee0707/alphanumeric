<% provide(:title, "Articles with tag \"" + @tag + "\"") %>

<div class="row-fluid">
  <div class="row-fluid center">
    <div class="span1"></div>
    <div class="span10">
      <h3>Articles with tag "<%= @tag %>"</h3>
    </div>
    <div class="span1"></div>
  </div>
  <div class="row-fluid"><div class="span12"></div></div>
  <div class="row-fluid">
    <% if !@articles.empty? %>
    <div class="span1"></div>
    <div class="span10">
      <table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th class="span6">TITLE</th>
	    <th class="span3">AUTHOR</th>
	    <th class="span3">PUBLISHED TIME</th>
	  </tr>
	</thead>
	<tbody>
	  <% @articles.each do |article| %>
	  <tr>
	    <td><%= link_to article.title, published_article_path(article)%></td>
	    <% if article.contributor.nil? %>
	    <td>NO AUTHOR</td>
	    <% else %>
	    <td><%= article.contributor.first_name + " " + article.contributor.last_name %></td>
	    <% end %>
	    <% if article.published_at.nil? %>
	    <td>NO TIME</td>
	    <% else %>
	    <td><%= article.published_at.localtime.strftime "%m/%d/%y %I:%M %p" %></td>
	    <% end %>
	  </tr>
	  <% end %>
	</tbody>
      </table>
      <div class="row-fluid center"><%= will_paginate @articles, :renderer => BootstrapPagination::Rails, :previous_label => "←", :next_label => "→" %></div>
    </div>
    <div class="span1"></div>
    <% else %>
    <div class="row-fluid center">
      <strong>There are no articles.</strong>
    </div>
    <% end %>
  </div>
</div>  

  


