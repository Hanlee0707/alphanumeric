<% provide(:title, "New") %>
<div class="row-fluid">
  <div class="span3 side-contents-bar">
    <% if !@articles.empty? %>
    <% articles.each do |article| %>
    <% if article.read %>
    <div id=<%= article.id %> class="row-fluid no-margin">
      <div class="span11-5 title-background little-padding-all-around read-article">
	<%= link_to(insert_article_path(:id => article.id), method: :post, remote: true) do %>
	<div class="row-fluid">
	  <div class='row-fluid'>
	    <%= article.title %>
	  </div>
	  <div class='row-fluid little-margin-bottom'>
	    <span class="category-color"><%= article.category + " | "%></span><span class="location-color"><%= article.country %></span>
	    <!-- </div> -->
	    <!-- <span class='span5 right little-padding-right'> -->
	    <span class="published-time-color" style="float:right;">
	      <%= distance_of_time_in_words_to_now(article.published_at.localtime) %>
	    </span>
	  </div>
	</div>
	<% end %>
      </div>
    </div>
    <% else %>
    <div id=<%= article.id %> class="row-fluid no-margin">
      <div class="span11-5 title-background little-padding-all-around unread-article">
	<%= link_to(insert_article_path(:id => article.id), method: :post, remote: true) do %>
	<div class="row-fluid">
	  <div class='row-fluid'>
	    <%= article.title %>
	  </div>
	  <div class='row-fluid little-margin-bottom'>
	    <span class="category-color"><%= article.category + " | "%></span><span class="location-color"><%= article.country %></span>
	    <span class="published-time-color" style="float:right;">
	      <%= distance_of_time_in_words_to_now(article.published_at.localtime) %>
	    </span>
	  </div>
	</div>
      </div>
      <% end %>
    </div>
    <% end %>
    <% end %>
    <% else %>
    <div class="row-fluid">
      Empty!
    </div>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span3"></div>
    <div class="span9">
      <div class="row-fluid">
	<% if notice and request.path.include? "newsbox" %>
	<div id="notice" class="span12 center" style="margin-left:0;">
	  <%=notice %>
	</div>
	  <% else %>

	    <% end %>

      </div>
      <div class="row-fluid" id="content_container">
	<div class="row-fluid center">
	<h3>Choose an article from the list.</h3>
	</div>
      </div>
    </div>
  </div>
</div>
















