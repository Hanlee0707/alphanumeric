<% provide(:title, "New") %>
<div class="row-fluid">
  <div class="span3 side-contents-bar">
    <% if !@articles.empty? %>
    <% articles.each do |article| %>
    <% if article.read %>
    <div id=<%= article.id %> class="row-fluid little-padding margin-children title-background">
      <%= link_to(insert_article_path(:id => article.id), method: :post, remote: true, style:"color:gray;") do %>
      <div class='row-fluid'>
	<%= article.title %>
      </div>
      <div class='row-fluid'>
	<div class='span6 left'>
	  <%= article.category + " | " + article.country %>
	</div>
	<div class='span6 right little-padding-right'>
	  <%= distance_of_time_in_words_to_now(article.published_at.localtime) %>
	</div>
      </div>
      <% end %>
    </div>
    <% else %>
    <div class="row-fluid little-padding title-background">
      <%= link_to(insert_article_path(:id => article.id), method: :post, remote: true) do %>
      <div class='row-fluid'>
	<%= article.title %>
      </div>
      <div class='row-fluid'>
	<div class='span6 left'>
	  <%= article.category + " | " + article.country %>
	</div>
	<div class='span6 right little-padding-right'>
	  <%= distance_of_time_in_words_to_now(article.published_at.localtime) %>
	</div>
      </div>
      <% end %>
    </div>
    <% end %>
    <% end %>
    <% else %>
    <div class="row-fluid">
      Empty!
    </div>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span3"></div>
    <div class="span9" id="content_container">
    </div>
  </div>
</div>
















