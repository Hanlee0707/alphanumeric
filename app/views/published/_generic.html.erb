<% provide(:title, "Published Articles") %>
<div class="row-fluid">
  <div class="span3 side-contents-bar" style="padding:0;">
    <div class="row-fluid" style="margin:0;padding:0;">
      <div class="row-fluid" style="margin:0;padding:0;">
	  <%= link_to image_tag("bt_time.png", alt: "time"), published_index_path(:sort => "published_at", :direction => @direction), class:"span4 read-article title-background center", style:"width:33.3%;margin:0;height:40px;padding-top:7px;" %>
	  <%= link_to image_tag("bt_category.png", alt: "category"), published_index_path(:sort => "category"),  class:"span4 read-article title-background center", style:"width:33.3%;margin:0;height:40px;padding-top:7px;" %>
	<div class="span4 read-article title-background" style="width:33.3%;margin:0;height:40px;padding-top:7px;">
	</div>
      </div>
    </div>
    <% if !@articles.empty? %>
    <% articles.each do |article| %>
    <div id=<%= article.id %> class="title-background row-fluid no-margin little-padding unread-article">
      <div class="span11-5 little-padding-all-around">
	<%= link_to(staff_insert_article_path(:id => article.id), method: :post, remote: true) do %>
	<div class="row-fluid">
	  <div class='row-fluid'>
	    <%= article.title %>
	  </div>
	  <div class='row-fluid little-padding-bottom'>
	    <span class="category-color"><%= article.category + " | "%></span><span class="location-color"><%= article.country %></span>
	    <span class="published-time-color" style="float:right;padding-right:5px;">
	      <%= distance_of_time_in_words_to_now(article.published_at.localtime) %>
	    </span>
	  </div>
	</div>
      </div>
    </div>
    <% end %>
    <% end %>
    <% else %>
    <div class="row-fluid">
      Empty!
    </div>
    <% end %>
  </div>
  <div class="row-fluid">
    <div id="article_contents" class="span9 offset3">
      <div class="row-fluid">
	<% if notice and request.path.include? "newsbox" %>
	<div id="notice" class="span12 center" style="margin-left:0;">
	  <%=notice %>
	</div>
	  <% else %>

	    <% end %>

      </div>
      <div class="row-fluid" id="content_container">
	<div class="row-fluid center">
	<h3>Choose an article from the list.</h3>
	</div>
      </div>
    </div>
  </div>
</div>






