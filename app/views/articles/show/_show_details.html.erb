<div class="row-fluid">
<div class="span11">
  <div class="row-fluid">
    <div class="row-fluid center">
      <strong>Details</strong>
      <div class="hr-full center"></div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="row-fluid"><div class="span12"></div></div>
    <% num_images = 0 %>
    <% @article.images.each do |image| %>
    <% if image.image_type == "DETAIL" then %>
    <% num_images = num_images+1 %>
    <% end %>
    <% end %>
    <% num_details = num_images + @article.additional_texts.size %>
    <% if num_details > 0 then %>
    <div class="row-fluid">
      <div class="row-fluid">
      <% position= 0 %>
      <% @article.additional_texts.each do |text| %>
        <% if text.location != position then %>
	  <% @article.images.each do |image| %>
            <% if image.image_type == "DETAIL" and image.location== position then %>
	    <div class="row-fluid">
 	      <%= image_tag image.image_name.fit.url.to_s %>
	    </div>
	    <% position = position + 1 %>
 	    <% end %>
	  <% end %>
	<% end %>
	  <div class="row-fluid">
	    <%= raw(text.bullet)%>
  	  </div>
	<% position = position + 1 %>
      <% end %>
      <% @article.images.each do |image| %>
      <% if image.image_type == "DETAIL" and image.location== position then %>
      <div class="row-fluid">
	<%= image_tag image.image_name.fit.url.to_s %>
      </div>
      <% position = position + 1 %>
      <% end %>
      <% end %>
      </div>
    </div>
    <div class="row-fluid"><div class="span12"></div></div>
    <% end %>
    
    <div class="row-fluid">
      <% ordering = "left" %>
      <% article.numbers.each do |number| %>
      <% class_location = "row-fluid " + ordering %>
      <div class="<%= class_location %>">
	  <% if ordering == "left" %>
	  <% ordering = "right" %>
	  <% else %>
	  <% ordering = "left" %>
	  <% end %>
	<div class="row-fluid" style="font-size:20pt;">
	  <%= number.value%>
	</div>
	<div class="row-fluid">
	  <%=number.explanation %>
	</div>
      </div>
      <% end %>
    </div>
    <div class="row-fluid"><div class="span12"></div></div>
    <div class="row-fluid"><div class="span12"></div></div>
    <div class="row-fluid"><div class="span12"></div></div>
  </div>
  </div>
  <div class="span1"></div>  
</div>
