<div class="row-fluid">
<div class="span-5"></div>
<div class="span11">
  <div class="row-fluid">
    <div class="row-fluid center">
      <strong>Summary</strong>
      <div class="hr-full center"></div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="row-fluid"><div class="span12"></div></div>
    <div class="row-fluid">
	<%= raw add_definitions(article) %>
    </div>
  </div>

  <% if !(article.images.nil?) %>
    <% article.images.each do |image| %>
      <% if image.image_type == "GIST" %>
      <div class="row-fluid">
	<div class="row-fluid"><div class="span12"></div></div>
	<div class="row-fluid">
	  <div class="span3"></div>
	  <div class="span6">
	    <div class="row-fluid">
	      <div class="span2"></div>
  	      <div class="span10">
  		<%= image_tag image.image_name.fit.url.to_s %>
  	      </div>
	    </div>
	  </div>
	  <div class="span3"></div>
	</div>
      </div>
      <% end %>
    <% end %>
  <% end %>

  <div class="row-fluid"><div class="span12"></div></div>
  <div class="row-fluid"><div class="span12"></div></div>
  <div class="row-fluid"><div class="span12"></div></div>

</div>
<div class="span-5"></div>
</div>
