<% if edit %>
  <% go_to_action = "update" %>
<% else %>
  <% go_to_action = "create" %>
<% end %>
<%= form_for @article, :url=> {action: go_to_action}, :html => {:multipart => true} do |f| %>
  <div class="span1"></div>
  <div class="span11">
    <%=render 'error' %>
    <div class="row span12">
      <div class="row center span12">
	<% if edit %>
	<h3>Edit Article</h3>
	<% else %>
	<h3>New Article</h3>
	<% end %>
      </div>
    </div>
    
    <div class="row span12"></div>
    
    <% if editor then %>
    <%= render 'instruction_form', :f => f, :edit=>edit, :editor => editor %>
    <% else %>
    <%= render 'instruction_form', :f => f, :edit=>edit, :editor => editor %>
    <%= render 'basic_information_form', :f => f %>
    <% end %>
    <% if edit then %>
    <%= render 'background_form', :f => f %>
    <%= render 'recent_events_form', :f => f %>
    <%= render 'details_form', :f => f %>
    <%= render 'reference_form', :f => f %>
    <% end %>
    <div class="row span12 center">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to 'Back', @back_path, class: 'btn btn-primary make-white' %>
    </div>

    <div class="row span12"></div>
    <div class="row span12"></div>
    <div class="row span12"></div>
    <div class="row span12"></div>

  </div>
  
</div>


<% end %>
