<% if @isDraft then %>
  <% provide(:title, "Draft New") %>
<% elsif @isAssign then %>
  <% provide(:title, "Assign New") %>
<% end %>

<% if @isDraft then %>
  <% if @isEditor then %>
  <%= render partial: 'articles/common/draft_new_form', locals: { isEditor: true, editor: @editor_id, isDraft: true } %>
  <% elsif @isContributor then %>
  <%= render partial: 'articles/common/draft_new_form', locals: { isEditor: false, isContributor:true, contributor: @contributor_id, isDraft: true } %>
  <% end %>
<% elsif @isAssign then %>
  <% if @isEditor then %>
  <%= render partial: 'articles/common/assign_new_form', locals: { isEditor: true, editor: @editor_id, isDraft: false } %>
  <% end %>
<% end %>


