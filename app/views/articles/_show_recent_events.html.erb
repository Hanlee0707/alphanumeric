<% if !user %>
<div class="span11">
<% end %>
  <div class="row span12">
    <div class="span12 center">
      <% if user %>
      <%=link_to raw("<i class='icon-arrow-left'></i>"), show_previous_path(:article_id=> article.id, :user=> true), id:'show_previous_summaries_button', class:'btn up', style:"float:left;", remote: true %>
      <% end %>
      <strong>Recent Events</strong>
      <% if user %>
      <%=link_to raw("<i class='icon-arrow-right'></i>"), show_details_path(:article_id => article.id, :user => true), id:'show_details_button', class:'btn up', style:"float:right;", remote: true %>
      <% end %>
      <div class="hr-full center"></div>
    </div>
  </div>

  <div class="row span12">
    <div class="span12"></div>
    <div class="span12">
	<%= raw add_definitions(article) %>
	<!-- <%= raw article.current_content %> -->
    </div>
    <div class="span3"></div>
  </div>

  <% if !(article.images.nil?) %>
    <% article.images.each do |image| %>
      <% if image.image_type == "GIST" %>
      <div class="row span12">
	<div class="row span12"></div>
	<div class="span3"></div>
	<div class="span6">
	  <div class="span2"></div>
  	  <div class="span10">
  	    <%= image_tag image.image_name.fit.url.to_s %>
  	  </div>
	</div>
	<div class="span3"></div>
      </div>
      <% end %>
    <% end %>
  <% end %>

  <div class="row span12"></div>
  <div class="row span12"></div>
  <div class="row span12"></div>

  <div class="row span12">
    <div class="span5"></div>
    <div class="span4" style="padding-left:22px;">


    </div>
    <div class="span3"></div>
  </div>
<% if !user %>
</div>
<div class="span1"></div>
<% end %>
