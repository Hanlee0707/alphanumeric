<% if @can_edit %>
<div class="span2">
</div>
<% end %>
<div class="span10">
  <div class="row span12"></div>
  <div class="span10">
    <div class="row span12">
      <div class="span3"></div>
      <div class="center span6">
	<h3><%= @employee.first_name+" "+@employee.last_name %></h3>
	<%= @employee.email %>
      </div>
      <div class="span3"></div>
    </div>
    
    <div class="row span12"></div>
    <div class="row span12">
      <div class="span3"></div>
      <div class="span6 center">
	<strong>Position</strong>
	<div class="hr center"></div>
      </div>
      <div class="span3"></div>
    </div>
    
    <div class="span12 row">
      <div class="span3"></div>
      <div class="span6 field">
	<div class="span1"></div>
	<div class="span11">
	  <div class="span2"></div>
	  <div class="span10">
	    <% @employee.employee_positions.each do |position| %>
	    <div class="span1"></div>
	    <div class="span7">
	      <%= position.position %>
	    </div>
	    <div class="span4">
	      <% if position.position != "Intern" and position.position != "Contributor" then %>
	      level <%= position.level %>
	      <% end %>
	    </div>
	    <% end %>
	  </div>
	</div>
      </div>
      <div class="span3"></div>
    </div>
    
    <div class="span12 row"></div>
    <div class="row span12"></div>
    
    <div class="row span12 center">
      <div class= "span3"></div>
      <div class= "span6 center"> 
	<% if @can_edit %>
        <%= link_to 'Edit', edit_administrator_employee_path(current_employee, @employee), class: 'btn btn-primary make-white' %>
	<% if @administrative %>
	<%= link_to 'Delete', administrator_employee_path(current_employee, @employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary make-white' %> 
	<% end %>
	<% end %>
	<%= link_to 'Back', @back_path, class: 'btn btn-primary make-white' %>
      </div>
      <div class="span3"></div>
    </div>
  </div>
  <div class="span2"></div>
</div>






