<div class="span2"></div>
<div class="span8">
  <div class="span1"></div>
  <div class="span2">
    <div class="span5"></div>
    <div class="span7 little-down">
      <%= f.hidden_field :_destroy, value: "0" %>
      <%= link_to raw("<i class='icon-remove'></i>"), "#", class:'remove_nested_attributes_button'%>
    </div>
  </div>
  <div class="span6">
    <% if !f.object.position.nil? and f.object.position != "" then %>
    <%= f.select :position, options_for_select(list_of_positions, f.object.position), {}, {:class=> "span11"} %>
    <% else %>
    <%= f.select :position, options_for_select(list_of_positions), {}, {:class=> "span11"} %>
    <% end %>
  </div>
  <div class="span3 level">
    <% if !f.object.level.nil? and f.object.level != "" then %>
    <%= f.select :level, options_for_select(list_of_levels(f.object.position), f.object.level), {}, {:class=> "input-time"} %>
    <% else %>
    <%= f.select :level, options_for_select(list_of_levels("Intern")), {}, {:class=> "input-time"} %>
    <% end %>
  </div>
</div>
<div class="span2"></div>

