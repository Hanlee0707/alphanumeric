<div class="span12 row">
  <div class="span3">
  </div>
  <div class="span6 field center">
    <h3><%= employee.first_name%> <%= employee.last_name %></h3>
    <%= employee.email %>
    <%= f.hidden_field :first_name %>
	<%= f.hidden_field :last_name %>
	<%= f.hidden_field :email %>
	<%= f.hidden_field :updating_password, value:"true" %>
  </div>
  <div class="span3"></div>
</div>

<div class="row span12"></div>
<div class="row span12">
  <div class="span3"></div>
  <div class="span6 center">
    <strong>Position</strong>
    <div class="hr center"></div>
  </div>
  <div class="span3"></div>
</div>

<div class="span12 row">
  <div class="span3"></div>
  <div class="span6 field">
    <div class="span1"></div>
    <div class="span11">
      <div class="span2"></div>
      <div class="span10">
	<% employee.employee_positions.each do |position| %>
	<div class="span1"></div>
	<div class="span7">
	  <%= position.position %>
	</div>
	<div class="span4">
	  <% if position.position != "Intern" and position.position != "Contributor" then %>
	  level <%= position.level %>
	  <% end %>
	</div>
	<% end %>
      </div>
    </div>
  </div>
  <div class="span3"></div>
</div>

<div class="span12 row"></div>
<div class="span12 row">
  <div class="span3"></div>
  <div class="span6 center">
    <div class="span12">
      <%= f.password_field :password, placeholder: "password" %>
    </div>
    <div class="span12">
      <%= f.password_field :password_confirmation, placeholder:"password confirmation" %>
    </div>
  </div>
  <div class="span3"></div>
</div>

<div class="span12 row"></div>

