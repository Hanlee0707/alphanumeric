<div class="span10">
  <div class="row span12"></div>
  <div class="row span12">
    <div class="span10 center">
      <h2>Less is More. </h2>
    </div>
    <div class="span2"></div>
  </div>
  <div class="row span12"></div>
  <div class="row span12">
    <div class="span10 center">
      <%= form_tag sessions_path do %>
      <div class="field span12">
	<%= text_field_tag :email, params[:email], placeholder: "email" %>
      </div>
      <div class="field span12">
	<%= password_field_tag :password, "", placeholder:"password" %>
      </div>
      <div class="action span12">
        <%= submit_tag "Log in",:class => "btn" %>
        <%= link_to "Forgot password?", "#", :class => "btn" %>
      </div>
    </div>
    <div class="span2"></div>
  </div>
<% end %>
</div>




