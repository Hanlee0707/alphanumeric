<div class="row-fluid"><div class="span12"></div></div>
<div class="row-fluid center">
     <h2>Less is More</h2>
     <% if @is_employee then %>
     <strong>UPLOADER</strong>
     <% else %>
     <strong>USER</strong>
     <% end %>
</div>
<div class="row-fluid"><div class="span12"></div></div>
<div class="row-fluid">
  <%= form_tag(sessions_path) do %>
  <div class="field row-fluid">
    <div class="row-fluid" style="font-size:80%;">
      <div class="span5"></div>
      <div class="span3">
	<div clas="row-fluid">
	  <div class="span8">
	    <div class="row-fluid">
	      <div class="span6 left">
		<% if !@is_employee then %>
		<%= link_to "Sign Up", signup_path %>
		<%= hidden_field_tag "user", true %>
		<% end %>
	      </div>
	      <div class="span6 right">
		<% if !@is_employee then %>
		<%= link_to "Forgot password?", new_user_reset_password_path %>
		<% else %>
		<%= link_to "Forgot password?", new_reset_password_path %>
		<% end %>
	      </div>
	    </div>
	  </div>
	  <div class="span4"></div>
	</div>
	<div class="row-fluid" style="display:table;">
	  <div class="row-fluid" style="display:table-row;">
	    <div id="login_fields" class="span8" style="display:table-cell;">
	      <div class="row-fluid">
		<%= text_field_tag :email, params[:email], placeholder: "email", class: "span12" %>
	      </div>
	      <div class="row-fluid">
		<%= password_field_tag :password, "", placeholder:"password", class:"span12" %>
	      </div>
	    </div>
	    <div class="span4" style="display:table-cell;">
	      <div class="row-fluid">
		<div class="span1"></div>
		<div class="span11">
		  <%= submit_tag "Log in",:class => "btn btn-primary", id:"login_button" %>
		</div>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
      <div class="span4"></div>
    </div>
  </div>
</div>
<% end %>





