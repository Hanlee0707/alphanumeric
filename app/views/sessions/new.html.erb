<div class="row span12"></div>
<div class="row span12 center">
     <h2>Less is More</h2>
     <% if @is_employee then %>
       <strong>UPLOADER</strong>
       <% end %>
</div>
<div class="row span12"></div>
<div class="row span12 center">
  <%= form_tag sessions_path do %>
  <div class="field span12">
    <div class="span12" style="font-size:80%;">
      <div class="span5"></div>
      <div class="span3">
	<div class="span6 left" style="padding-left:20px;">
	<% if !@is_employee then %>
	<%= link_to "Sign Up", signup_path %>
	<%= hidden_field_tag "user", true %>
	<% end %>
	</div>
	<div class="span6 right" style="padding-right:54px;">
	  <%= link_to "Forgot password?", new_reset_password_path %>
	</div>
      </div>
      <div class="span3"></div>
    </div>
  </div>
  <div class="field span12">
    <div class="span4"></div>
    <div class="span4" style="padding-left:65px;">
      <div class="span12" style="margin-bottom:-6px;">
	<%= text_field_tag :email, params[:email], placeholder: "email" %>
      </div>
      <div class="span12" style="display:inline-block;">
	<%= password_field_tag :password, "", placeholder:"password" %>
      </div>
    </div>
    <div class="span4 left" style="margin-left:-58px;">
      <%= submit_tag "Log in",:class => "btn btn-primary", :style => "height:65px;" %>
    </div>
  </div>
</div>
<% end %>





