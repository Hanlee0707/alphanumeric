<% provide(:title, "Archived Articles") %>

<div class="span12">
  <div class="span12 row center">
    <h3>Archived Articles</h3>
  </div>
  <div class="span12 row center"></div>
  <% if !@articles.empty? %>
  <div class="span1"></div>
  <div class="span10">
    <table class="table table-striped table-hover">
      <thead>
	<tr>
	  <th class="span6">TITLE</th>
	  <th class="span3">AUTHOR</th>
	  <th class="span3">PUBLISHED TIME</th>
	</tr>
      </thead>
      <tbody>
	<% @articles.each do |article| %>
	<tr>
	  <% if !current_user.present? %>
	  <td><%= link_to article.title, archived_article_path(article)%></td>
	  <% end %>
	  <% if current_user.present? %>
	  <td><%= link_to article.title, user_archived_article_path(article)%></td>
	  <% end %>
	  <td><%= article.contributor.first_name + " " + article.contributor.last_name %></td>
	  <% if article.published_at.nil? %>
	  <td>NO TIME </td>
	  <% else %>
	  <td><%= article.published_at.localtime.strftime "%m/%d/%y %I:%M %p" %></td>
	  <% end %>
	</tr>
	<% end %>
      </tbody>
    </table>
    <div class="span12 row center"><%= will_paginate @articles, :renderer => BootstrapPagination::Rails, :previous_label => "←", :next_label => "→" %></div>
  </div>
  <div class="span1"></div>
  <% else %>
  <div class="span12 row center"><strong>There are no articles.</strong></div>
  <% end %>
</div>




