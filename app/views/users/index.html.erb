<% provide(:title, "Users") %>

<div class="row-fluid"> 
  <div class="row-fluid center"><div class="span12"></div></div>
  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span6">
      <div class="row-fluid">
	<div class="span4">
	</div>
	<div class="span8"></div>
      </div>
    </div>
    <div class="span5 right">
      <div class="row-fluid">
	<div class="span10">
	  <div class="row-fluid">
	    <div class="span11-4">
	    </div>
	  </div>
	</div>
	<div class="span2"></div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <% if !@users.empty? %>
    <div class="span1"></div>
    <div class="span10">
      <table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th class="span4">NAME</th>
	    <th class="span3">EMAIL</th>
	    <th class="span1"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @users.each do |user| %>
	  <tr>
	    <td><%= user.first_name+" "+user.last_name %></td>
	    <td><%= user.email %></td>
	    <% if @can_delete then %>
	    <td><%= link_to 'Delete', staff_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary make-white' %> 
	    </td>
	    <% end %>
	  </tr>
	  <% end %>
	</tbody>
      </table>
      <div class="row-fluid center"><%= will_paginate @users, :renderer => BootstrapPagination::Rails, :previous_label => "←", :next_label => "→" %></div>
      <div class="span1"></div>
    </div>
    <% else %>
    <div class="row-fluid center"><strong>There are no users with that criteria.</strong></div>
    <% end %>
  </div>
</div>


